{
  "extends": "airbnb-base",
  "env": {
      "browser": false,
      "commonjs": true,
      "es2021": true
  },
  "parserOptions": {
      "ecmaVersion": "latest"
  },
  "rules": {
    "linebreak-style": 0,
    "global-require": 0,
    "eslint linebreak-style": [0, "error", "windows"],
    "semi": ["error", "never"],
    "object-curly-newline": ["error", "always"],
    "import/no-extraneous-dependencies": [
      "error",
      {"devDependencies": true}
    ],
    "no-underscore-dangle": ["error", {"allow": ["_id"]}]
  }

}